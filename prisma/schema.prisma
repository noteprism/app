generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NoteGroup {
  id    String  @id @default(uuid())
  title String
  notes Note[]
}

model Note {
  id        String   @id @default(uuid())
  content   String
  color     String
  createdAt DateTime @default(now())
  group     NoteGroup? @relation(fields: [groupId], references: [id])
  groupId   String?
}
